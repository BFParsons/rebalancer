# Server Configuration
NODE_ENV=development
PORT=3001

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/capacity_tracker

# JWT Configuration
JWT_ACCESS_SECRET=your-access-token-secret-at-least-32-characters-long
JWT_REFRESH_SECRET=your-refresh-token-secret-at-least-32-characters-long

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OAuth Configuration (optional)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common

# Cookie Configuration
COOKIE_SECRET=your-cookie-signing-secret
